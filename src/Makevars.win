# --- TMB-specific Makevars file ---
# --- TMB-specific compiling directives below ---

TMB_FLAGS = -I"../../inst/include"
.PHONY: all tmblib

all: $(SHLIB)
$(SHLIB): tmblib

tmblib: 
	(cd TMB; $(R_HOME)/bin$(R_ARCH_BIN)/Rscript \
	--no-save --no-restore compile.R '$(TMB_FLAGS)')

clean:
	rm -rf *.dll *.o TMB/*.dll TMB/*.o
